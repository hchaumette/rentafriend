<%= render 'shared/navbar' %>

<div class="container dashboard-margin-bottom">
  <div class="grid">
    <div class="grid-left">
    <h2>Calendar</h2>
    <input type="date" class="flatpickr d-none" data-controller="flatpickr">
    </div>
  <div>
    <h2>Request</h2>
    <div>
      <% current_user.bookings.each do |booking| %>
      <div>
        <%= booking.activity.title %>
        <%= booking.state %>
      </div>
      <% end %>
    </div>
  </div>

  <div>
    <h2>my activities</h2>
    <div>
      <% current_user.activities.each do |activity| %>
      <div>
        <%= activity.title %>
        <% activity.bookings.each do |booking| %>
          <div>
            <p><strong><%=booking.user.name%></strong> wants to join this activity</p>
            <%= link_to "accept", '',class:'btn btn-primary' %>
            <%= link_to "decline", '',class:'btn btn-danger' %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>



</div>
  </div>
  </div>

</div>
